pipeline {
        agent {
            docker { image 'python:3.7' }
        }
         stages {
            stage('Build') {
                steps {
                        withEnv(["HOME=${env.WORKSPACE}"]){
                                sh 'add2virtualenv /var/jenkins_home/workspace/Team_11/django_pipeline/.local/bin'
                                sh 'python -m pip install --upgrade pip setuptools wheel'
                                sh 'pip install -r SecureCity/requirements.txt'
                        }
                        //sh 'python -m venv env'
                        //sh 'source env/bin/activate'
                        
                }
                
            }
            stage('Test') {
                steps {
                    sh 'python SecureCity/manage.py test'
                }
            }
        }
        /*
