pipeline {
        agent {
            docker { image 'python:3.7' }
        }
         stages {
            stage('Build') {
                steps {
                        withEnv(["HOME=${env.WORKSPACE}"]){
                                sh '/usr/local/bin/python -m pip install --upgrade pip'
                                sh 'pip install -r SecureCity/requirements.txt'
                        }
                        //sh 'python -m venv env'
                        //sh 'source env/bin/activate'
                        
                }
                
            }
            stage('Test') {
                steps {
                    sh 'python SecureCity/manage.py test'
                }
            }
        }
        /*
        stages {
            stage('Build') {
                steps {
                        echo "build"
                }
            }
            stage('Test') {
                steps {
                      echo "test"
                }
            }
        }
        */
       
    }
